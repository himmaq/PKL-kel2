<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AddDataFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/boy"
                    android:layout_gravity="end"/>
                <TextView
                    android:id="@+id/tv_child_name"
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="@string/child_name"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_buttom"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tv_ages"
            android:layout_below="@id/cv_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Children's Ages"/>
        <FrameLayout
            android:id="@+id/fl_et_ages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ages">
            <EditText
                android:id="@+id/et_ages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Months"
                android:textColor="@color/grey"
                android:gravity="end"
                android:inputType="number" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Months"
                android:layout_marginTop="25dp"
                android:gravity="end"/>
        </FrameLayout>
        <TextView
            android:id="@+id/tv_weight"
            android:layout_below="@id/fl_et_ages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/weight"/>
        <EditText
            android:id="@+id/et_weight"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_weight"
            android:text="@string/_24"
            android:inputType="number"/>
        <TextView
            style="@style/Text.TitleInput"
            android:text="@string/kg"
            android:layout_below="@id/tv_weight"
            android:layout_toRightOf="@id/et_weight"
            android:layout_marginTop="31dp"/>
        <TextView
            android:id="@+id/tv_date"
            android:layout_below="@id/et_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/date_now"/>
        <EditText
            android:id="@+id/et_date"
            android:layout_width="357dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_date"
            android:layout_marginBottom="100dp"
            android:inputType="date"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_calendar"
            android:layout_below="@id/tv_date"
            android:layout_toRightOf="@id/et_date"
            android:layout_marginTop="15dp"/>
        <Button
            style="@style/Button"
            android:id="@+id/btn_add_data"
            android:layout_below="@id/et_date"
            android:layout_margin="30dp"
            android:text="@string/add_data_add"/>
    </RelativeLayout>
</ScrollView>