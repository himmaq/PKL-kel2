<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="DiscussionFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<!--            <androidx.appcompat.widget.Toolbar-->
<!--                android:id="@+id/toolbar"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="?attr/actionBarSize"-->
<!--                app:titleTextColor="@color/black"-->
<!--                android:background="@color/white"-->
<!--                android:theme="?attr/actionBarTheme"-->
<!--                app:title="Discussion"-->
<!--                android:elevation="5dp"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintStart_toEndOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="parent"/>-->

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:orientation="horizontal"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints">

            <androidx.cardview.widget.CardView
                android:id="@+id/joincard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/joindiscuss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Join the Discussion"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/infants_img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/joindiscuss"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/infants" />

                    <TextView
                        android:id="@+id/infants_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/infants_img"
                        android:layout_marginLeft="45dp"
                        android:text="Infants"
                        android:textSize="12dp" />

                    <ImageView
                        android:id="@+id/pregnancy_img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/joindiscuss"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/infants_img"
                        android:src="@drawable/pregnancy" />

                    <TextView
                        android:id="@+id/pregnancy_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/infants_img"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@+id/infants_txt"
                        android:text="Pregnancy"
                        android:textSize="12dp" />

                    <ImageView
                        android:id="@+id/edu_img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/joindiscuss"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/pregnancy_img"
                        android:src="@drawable/education" />

                    <TextView
                        android:id="@+id/edu_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/infants_img"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@+id/pregnancy_txt"
                        android:text="Education"
                        android:textSize="12dp" />

                    <ImageView
                        android:id="@+id/behavior_img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/joindiscuss"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/edu_img"
                        android:src="@drawable/behavior" />

                    <TextView
                        android:id="@+id/behavior_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/infants_img"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@+id/edu_txt"
                        android:text="Behavior"
                        android:textSize="12dp" />

                    <ImageView
                        android:id="@+id/toodlers_img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/infants_txt"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/toddlers" />

                    <TextView
                        android:id="@+id/toodlers_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/toodlers_img"
                        android:layout_marginLeft="40dp"
                        android:text="Toodlers"
                        android:textSize="12dp" />

                    <ImageView
                        android:id="@+id/preschool_img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/pregnancy_txt"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/toodlers_img"
                        android:src="@drawable/preschool" />

                    <TextView
                        android:id="@+id/preschool_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/preschool_img"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@+id/toodlers_txt"
                        android:text="Preschool"
                        android:textSize="12dp" />

                    <ImageView
                        android:id="@+id/parenting_img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/edu_txt"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/preschool_img"
                        android:src="@drawable/parenting" />

                    <TextView
                        android:id="@+id/parenting_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/preschool_img"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@+id/preschool_txt"
                        android:text="Toodlers"
                        android:textSize="12dp" />

                    <ImageView
                        android:id="@+id/tough_img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/edu_txt"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/parenting_img"
                        android:src="@drawable/toughtopics" />

                    <TextView
                        android:id="@+id/tough_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/preschool_img"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@+id/parenting_txt"
                        android:text="Toodlers"
                        android:textSize="12dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_recentdiscuss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:text="Recent Discussion"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.055"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linear1" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="@+id/tv_recentdiscuss"
            tools:listitem="@layout/carddiscussion"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>




